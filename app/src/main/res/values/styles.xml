<resources>

    <style name="AppTheme" parent="AppTheme.Base" />
    <!-- Base application theme. -->
    <style name="AppTheme.Base" parent="style/Theme.AppCompat.Light">

        <item name="android:textColorPrimaryNoDisable">@color/colourGrey900</item>

        <item name="android:textColorSecondary">@color/colourGrey700</item>

        <!-- colorPrimary is used for the default action bar background -->
        <item name="colorPrimary">@color/colourBlue500</item>

        <!-- colorPrimaryDark is used for the status bar -->
        <item name="colorPrimaryDark">@color/colourBlue900</item>

        <!-- colorAccent is used as the default value for colorControlActivated
             which is used to tint widgets -->
        <item name="colorAccent">@color/colourBlue800</item>

        <item name="android:windowBackground">@color/colourBlue50</item>
    </style>

</resources>
